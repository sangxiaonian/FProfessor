<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/item_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/home_item_time_margin"
        android:clickable="true"
        android:paddingEnd="@dimen/item_loan_end">


        <ImageView
            android:id="@+id/img_item_loan"
            android:layout_width="@dimen/item_loan_image_width"
            android:layout_height="@dimen/item_loan_image_height"
            android:layout_marginEnd="@dimen/item_loan_end" />

        <TextView
            android:id="@+id/tv_title_item_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_item_time_margin"
            android:layout_toEndOf="@id/img_item_loan"
            android:textColor="@color/text_home_item"
            android:textSize="@dimen/home_item_more_textSize" />

        <TextView
            android:id="@+id/tv_title_sub_item_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_item_loan"
            android:lineSpacingMultiplier="1.2"
            android:layout_alignStart="@id/tv_title_item_loan"
            android:layout_marginTop="@dimen/main_padding_radio"
            android:textColor="@color/bg"
            android:textSize="@dimen/home_bottom_text_size" />

        <include layout="@layout/img_more" />


    </RelativeLayout>
</RelativeLayout>