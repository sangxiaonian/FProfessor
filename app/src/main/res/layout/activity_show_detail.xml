<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_show_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="finance.com.fp.ui.ShowDetailActivity"
    android:orientation="vertical"
    android:baselineAligned="false">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"

        android:background="@color/white"
        android:gravity="center"
        app:navigationIcon="@mipmap/icon_getback">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/card_title"
            android:textColor="@color/text_home_more_text"
            android:textSize="@dimen/app_title_size" />

    </android.support.v7.widget.Toolbar>
    <finance.com.fp.utlis.HorizontalProgress
        android:layout_width="match_parent"
        android:id="@+id/pb"
        android:layout_height="@dimen/title_cut_height"
        app:progress_text_visibility="invisible"
        app:progress_reached_color="@color/actionsheet_blue"
        />
    <WebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>
