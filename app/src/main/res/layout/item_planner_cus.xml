<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/find_margin_top"
    android:paddingStart="@dimen/planner_img_size"
     >

    <RelativeLayout
        android:layout_marginTop="@dimen/app_cut_big"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:id="@+id/img_icon"
            android:layout_width="@dimen/planner_img_size"
            android:layout_height="@dimen/planner_img_size"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_tcacher" />

        <TextView
            android:id="@+id/tv_planner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/img_icon"
            android:background="@drawable/icon_dialog"
            android:textSize="@dimen/app_title_text_size"
            android:textColor="@color/text_home_more_text"
            />
    </RelativeLayout>


</RelativeLayout>