<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingEnd="@dimen/app_margin_ends"
    android:paddingStart="@dimen/app_margin_ends"
    style="@style/item_style"
    >

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="@dimen/item_hot_apply_img_width"
        android:layout_height="@dimen/item_hot_apply_img_height"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/app_margin_ends"
        android:layout_marginEnd="@dimen/app_cut_big"
        android:layout_marginTop="@dimen/app_cut_line"
        android:src="@color/btn_import_item" />

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/img_item"
        android:layout_marginTop="@dimen/home_item_time_margin"
        android:layout_toEndOf="@id/img_item"
        android:textColor="@color/text_home_item"
        android:textSize="@dimen/app_title_text_model" />

    <TextView
        android:id="@+id/icon_flag"
        android:layout_width="@dimen/app_margin_ends"
        android:layout_height="@dimen/loan_item_tools_size"
        android:layout_alignParentRight="true"
        android:background="@mipmap/icon_one"
        android:gravity="center_horizontal"
        android:text="1"
        android:textColor="@color/white" />
</RelativeLayout>