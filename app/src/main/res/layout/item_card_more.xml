<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/find_margin_top"
    android:paddingLeft="@dimen/find_margin_left"
    android:paddingRight="@dimen/find_margin_left"
    android:paddingTop="@dimen/find_margin_top">

    <ImageView
        android:id="@+id/img_card_item"
        android:layout_width="@dimen/item_card_icon"
        android:layout_height="@dimen/item_card_icon"
        android:layout_marginEnd="@dimen/init_float_margin"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_card_item_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_card_item"
        android:textColor="@color/text_home_more_text"
        android:textSize="@dimen/card_item_big_textSize" />

    <include
        android:id="@+id/more_icon"
        layout="@layout/img_more"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="6dp"
        android:layout_height="12dp" />

    <TextView
        android:id="@+id/tv_card_item_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/home_item_margin"
        android:layout_toLeftOf="@id/more_icon"
        android:textColor="@color/text_home_item_time"
        android:textSize="@dimen/card_item_small_textSize"
        />


</RelativeLayout>