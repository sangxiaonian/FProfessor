<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/app_margin_ends"
    android:paddingRight="@dimen/app_margin_ends"
    android:paddingTop="@dimen/notif_v"
    android:paddingBottom="@dimen/notif_v"
    style="@style/item_style"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_centerVertical="true"
        android:layout_width="@dimen/notif_img_width"
        android:id="@+id/img_card"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_noticek"
        android:layout_marginEnd="@dimen/app_margin_ends"
        android:layout_height="@dimen/notif_img_height" />
      <TextSwitcher
          android:layout_toEndOf ="@id/img_card"
          android:layout_centerVertical="true"
          android:id="@+id/ts_card"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          />

       <TextView
           android:layout_centerVertical="true"
           android:layout_alignParentEnd="true"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/text_home_item_time"
           android:text="5分钟前"
           android:textSize="@dimen/notif_text_size"
           />


</RelativeLayout>