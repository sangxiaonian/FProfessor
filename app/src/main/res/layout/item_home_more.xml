<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        style="@style/item_style"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/home_item_time_margin"
        android:paddingLeft="@dimen/home_item_margin"
        android:paddingRight="@dimen/home_item_margin"
        android:paddingTop="@dimen/home_item_time_margin">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/main_item_more_title"
            android:textColor="@color/text_home_more_text"
            android:textSize="@dimen/home_item_more_textSize" />
       <!-- android:text="@string/main_item_more"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/home_item_time_margin"

            android:textColor="@color/text_home_item"
            android:textSize="@dimen/home_item_text" />

      <!--  <include layout="@layout/img_more" />-->

    </LinearLayout>

</RelativeLayout>