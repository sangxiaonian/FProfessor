<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/home_item_margin"
        android:paddingLeft="@dimen/app_margin_ends"
        android:paddingRight="@dimen/app_margin_ends"
        android:paddingTop="@dimen/home_item_margin">

        <ImageView
            android:id="@+id/img_set"
            android:layout_width="@dimen/my_title_icon_size"
            android:layout_height="@dimen/my_title_icon_size"
            android:layout_marginRight="@dimen/my_title_icon_right"
            android:scaleType="centerCrop"
            android:src="@mipmap/login_head_boy" />

        <TextView
            android:clickable="true"
            android:id="@+id/tv_set"
            style="@style/find_text_item"
            android:gravity="start"
            android:text="@string/set_item"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="17dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_more_white"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_find"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/text_home_item_cut">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
