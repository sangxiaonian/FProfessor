<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/app_margin_ends"

        android:paddingStart="@dimen/app_margin_ends">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="@dimen/app_second_image_size"
            android:layout_height="@dimen/app_second_image_size"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/app_margin_ends" />

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="@dimen/app_cut_big"
            android:layout_toEndOf="@id/img_item"
            android:text="@string/all_balance"
            android:textColor="@color/text_home_item"
            android:textSize="@dimen/app_title_text_size" />

        <TextView
            android:id="@+id/tv_sub_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_item"
            android:layout_below="@id/tv_item"
            android:layout_marginBottom="@dimen/app_cut_big"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/all_balance"
            android:textColor="@color/text_card_item_more"
            android:textSize="@dimen/app_title_text_model" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_call" />
    </RelativeLayout>

</FrameLayout>