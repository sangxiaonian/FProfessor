<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/item_style"
    >


        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/img_item"
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/gv_loan_img_size"
            android:layout_height="@dimen/gv_loan_img_size"
            android:layout_marginBottom="@dimen/gv_loan_end"
            android:layout_marginTop="@dimen/gv_loan_end"
            />

        <TextView
            android:id="@+id/tv_item"
            android:layout_marginBottom="@dimen/gv_loan_end"
            android:layout_below="@id/img_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/action_settings"
            android:textColor="@color/text_home_item"
            android:textSize="@dimen/gv_card_text_size" />
</RelativeLayout>