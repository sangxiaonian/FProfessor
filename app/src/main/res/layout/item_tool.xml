<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    style="@style/item_style"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_item"
        android:layout_width="@dimen/card_item_gri_img"
        android:layout_height="@dimen/card_item_gri_img"
        android:layout_marginTop="@dimen/home_item_time_margin"
        android:layout_marginBottom="@dimen/home_item_time_margin"
        />

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/home_bottom_text_size"
        android:layout_marginBottom="@dimen/home_item_time_margin"
        android:textColor="@color/text_home_item"
        />

</LinearLayout>